<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_img6"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".Admin.AdminMainActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/UserAdmin"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="200dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_white"
                android:padding="15dp"
                android:src="@drawable/user_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/red" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="User Forms"
                android:textAllCaps="true"
                android:textColor="@color/red"
                android:fontFamily="@font/montserrat"
                android:textSize="22dp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ComplaintsAdmin"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_white"
                android:padding="15dp"
                android:src="@drawable/complaints_img" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/red" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Complaint Forms"
                android:textAllCaps="true"
                android:textColor="@color/red"
                android:fontFamily="@font/montserrat"
                android:textSize="22dp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ThirdPartyResponse"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_white"
                android:padding="15dp"
                android:src="@drawable/thirdparty" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/red" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ThirdParty Responses"
                android:textAllCaps="true"
                android:textColor="@color/red"
                android:fontFamily="@font/montserrat"
                android:textSize="22dp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>




</LinearLayout>